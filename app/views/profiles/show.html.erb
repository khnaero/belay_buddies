<div class="panel panel-default">
  <div class="panel-body">
    <div class="row">
      <div class="col-md-4">
        <div class="table-responsive">
          <table class="table">
            <tbody>
              <tr>
                <td><strong>User:</strong></td>
                <td><%= @profile.user.username %></td>
              </tr>
              <tr>
                <td><strong>Acceptance:</strong></td>
                <td><%= @profile.acceptance %></td>
              </tr>
              <tr>
                <td><strong>City:</strong></td>
                <td><%= @profile.city %></td>
              </tr>
              <tr>
                <td><strong>State / Province:</strong></td>
                <td><%= @profile.state_province %></td>
              </tr>
              <tr>
                <td><strong>Country:</strong></td>
                <td><%= @profile.country %></td>
              </tr>
              <tr>
                <td><strong>Aid:</strong></td>
                <td><%= @profile.aid %></td>
              </tr>
              <tr>
                <td><strong>Trad:</strong></td>
                <td><%= @profile.trad %></td>
              </tr>
              <tr>
                <td><strong>Bouldering:</strong></td>
                <td><%= @profile.bouldering %></td>
              </tr>
              <tr>
                <td><strong>Sport:</strong></td>
                <td><%= @profile.sport %></td>
              </tr>
              <tr>
                <td><strong>About Me:</strong></td>
                <td><%= @profile.description %></td>
              </tr>
            </tbody>
          </table>
          <% if user_signed_in? && current_user.id != @profile.id %>
            <%= link_to "Write a Review", new_profile_review_path(@profile) %>
          <% end %>
        </div>
      </div>
