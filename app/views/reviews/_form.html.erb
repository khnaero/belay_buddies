<%= simple_form_for([@profile, @review]) do |f| %>
  <%= f.error_notification %>
    <div class="stars"><h5><strong>Rating:</strong></h5></div>
    <div class="stars" id="star-rating"></div>
  <%#= f.input :rating %>
  <%= f.input :comment %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>

<script>
  $('#star-rating').raty({
    path: '/assets/',
    scoreName: 'review[rating]'
  });
</script>