<%= simple_form_for([@user, @profile]) do |f| %>
  <%= f.error_notification %>
  <%= f.input :acceptance, collection: ["Yes", "Not at the moment"],include_blank: false , label: "Are you willing to connect with climbers?" %>
  <%= f.input :city %>
  <%= f.input :state_province, label: "State/Province" %>
  <%= f.input :country, prompt: "Select a Country" %>
  <%= f.input :aid, placeholder: "5.8 A2" %>
  <%= f.input :trad, placeholder: "5.9" %>
  <%= f.input :bouldering, placeholder: "V3" %>
  <%= f.input :sport, placeholder: "5.10b" %>
  <%= f.input :description, label: "About Me", placeholder: "Tell everyone a little about yourself." %>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
