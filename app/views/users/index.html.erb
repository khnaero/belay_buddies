<h1>Members</h1>
<div class="table-responsive">
  <table class="table table-condensed table-hover">
    <thead>
      <tr>
        <th>Member</th>
        <th>City</th>
        <th>State / Province</th>
        <th>Country</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.username, user_profile_path(user.profile) %></td>
          <td><%= user.profile.city %></td>
          <td><%= user.profile.state_province %></td>
          <td><%= user.profile.country_name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>